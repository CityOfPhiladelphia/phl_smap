<body data-spy="scroll" data-target=".subnav">
    <div data-role="page">
        <div data-role="header" class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="http://www.phila.gov/"><img title="Visit the City's Homepage" alt="Visit the City's Homepage" src="@Url.Content("~/Content/Images/cityLogo-31px.png")" /></a>
                    <span class="hidden-phone"><a class="brand" href="http://www.phila.gov/"><img title="Visit the City's Homepage" alt="Visit the City's Homepage" src="http://www.phila.gov/publishingimages/icons/cityLogoMark-145-30.png" /></a></span>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li class="active"><a title="Visit The City's Homepage" href="http://www.phila.gov"><span class="icon-home icon-white"></span></a></li>
                            <li class="active"><a title="Topics" href="http://www.phila.gov/Topics">Topics</a></li>
                            <li class="active"><a title="Businesses" href="http://www.phila.gov/Business">Businesses</a></li>
                            <li class="active"><a title="Residents" href="http://www.phila.gov/residents">Residents</a></li>
                            <li class="active"><a title="Visitors" href="http://www.phila.gov/visitors">Visitors</a></li>
                            <!--<li class="active"><a title="People We Serve" href="http://www.phila.gov/PeopleWeServe">People We Serve</a></li>-->
                            <li class="active"><a title="Agencies" href="http://www.phila.gov/Agencies">Government</a></li>
                            <!--<li class="active"><a title="311" href="http://www.phila.gov/311">Contact</a></li>-->
                        </ul> 
                        <form class="navbar-form pull-right">
                          <input type="text" id="SearchMain" class="search-query noSubmit" placeholder="Search Phila.gov" />
                          <div id="MainSearchButton" class="hidden-tablet icon-search search-main-icon"></div>
                        </form>          
                    </div>                      
                </div>
            </div>
        </div>
        @RenderBody()
    </div>    
    <script type="text/javascript" src="http://serverapi.arcgisonline.com/jsapi/arcgis/?v=3.2compact"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
