    <script src="@Url.Content("~/Scripts/jquery.ui.touch-punch.min.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/guiders-1.2.8.min.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/bootstrap/js/bootstrap.min.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/jquery.jsonp-2.4.0.min.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/mapscript.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("input.noSubmit").keypress(function (e) {
                var k = e.keyCode || e.which;
                if (k == 13) {
                    e.preventDefault();
                }
            });
            $("#MainSearchButton").click(function (e) {
                mainSearch();
                return false;
            });
            $('#SearchMain').keyup(function (event) {
                if (event.keyCode == '13') {
                    mainSearch();
                }
                return false;
            });
        });
        
        function mainSearch() {
            var queryString = $("#SearchMain").val(); 
            var baseUrl = "http://www.google.com/cse?oe=utf8&ie=utf8&source=uds&start=0&cx=012281970149422056935%3Ae3col_wgefa&hl=en&";
            window.location.href = baseUrl + "q=" + queryString;
            return false; 
        }        
    </script>
